package com.BankApp.Doa;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

import com.BankApp.Models.User;
import com.BankApp.Util.ConnectionFactory;

public class AccountApplicationDoa {
	
	public User getApplication() {
		User user = null;
		Connection conn = ConnectionFactory.getConnection();
		String sql = "select top 1 * from account_application;";
		try {
			Statement statement = conn.createStatement();
			ResultSet rs = statement.executeQuery(sql);
			if(rs.next()) {
				String username = rs.getString("username");
				String password = rs.getString("password");
				String accountType = rs.getString("account_type");
				user = new User(username, password, accountType);
			}
		} catch(SQLException e) {
			System.out.println("Error in getApplication");
			e.printStackTrace();
		}
		return user;
	}
	
	public Integer applicationCount() {
		Integer count = 0;
		Connection conn = ConnectionFactory.getConnection();
		String sql = "select count(*) as total from account_application";
		try {
			Statement statement = conn.createStatement();
			ResultSet rs = statement.executeQuery(sql);
			rs.next();
			count = rs.getInt("total");
		} catch (SQLException e) {
			System.out.println("Error in applicationcount");
			e.printStackTrace();
		}
		return count;
	}
}
